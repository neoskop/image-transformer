{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["dom", "esnext"]
  },
  "include": ["src/**/*", "index.d.ts"]
}
